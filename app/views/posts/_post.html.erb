<div id="<%= dom_id post %>">
  <figure class="item-card">
    <div class="image">
      <%= link_to(post_image_small(post), post) %>
    </div>
  </figure>

  <p>
    <strong>Sibling:</strong>
    <%= post.sibling_id %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= post.date %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

</div>
