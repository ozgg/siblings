<% content_for :title, t('.title') %>
<% content_for :breadcrumbs do %>
  <%= link_to(t('posts.index.nav_text'), posts_path) %>
  <%= link_to(@post.title_for_page, @post) %>
  <span><%= t('.nav_text') %></span>
<% end %>

<article>
  <h1><%= t('.title') %></h1>

  <%= render "form", post: @post %>
</article>
