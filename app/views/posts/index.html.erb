<% content_for :title, t('.title', page: current_page) %>
<% content_for :breadcrumbs do %>
  <span><%= t('.nav_text') %></span>
<% end %>

<section class="posts-index">
  <h1><%= t('.heading') %></h1>

  <%= paginate @collection %>

  <div class="collection">
    <% @collection.each do |entity| %>
      <%= render partial: 'posts/entity/preview', locals: { entity: } %>
    <% end %>
  </div>

  <%= paginate @collection %>

  <%= link_to t('posts.new.title'), new_post_path %>
</section>
